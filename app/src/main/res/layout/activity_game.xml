<?xml version="1.0" encoding="utf-8"?>
<!--Start main Layout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".GameView">

    <!--Start Relative1-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Spacer Header1 -->
        <TextView
            android:id="@+id/textView_header1"
            android:layout_width="match_parent"
            android:layout_height="10dp"

            android:background="@color/white"/>

        <!--Spacer 1, Left of Level -->
        <TextView
            android:id="@+id/textView_blank1"
            android:layout_width="30dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"/>

        <!--Level title -->
        <TextView
            android:id="@+id/textView_level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_toRightOf="@id/textView_blank1"
            android:paddingTop="10dp"/>

        <!--Spacer 2, Right of Pause -->
        <TextView
            android:id="@+id/textView_blank2"
            android:layout_width="30dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"/>

        <!--Pause button -->
        <ImageButton
            android:id="@+id/button_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/textView_blank2"
            android:background="@color/black"
            android:src="@drawable/ic_baseline_pause"
            android:paddingTop="15dp"
            android:onClick="pauseMenu"/>
    </RelativeLayout>
    <!--End Relative1-->

    <!--Start Linear1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_00"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="90sp"
            android:background="@drawable/bluecircle_test2"
            />

        <Button
            android:id="@+id/button_01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="90sp"
            android:background="@drawable/blue_circle_test3"/>
    </LinearLayout>
    <!--End Linear1-->

    <!--Start Linear2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="90sp" />

        <Button
            android:id="@+id/button_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="90sp" />
    </LinearLayout>
    <!--End Linear2-->

    <!--Start Relative2-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Spacer 3, Left of Timer -->
        <TextView
            android:id="@+id/textView_blank3"
            android:layout_width="30dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"/>

        <!--[PLACEHOLDER] Timer-->
        <TextView
            android:id="@+id/textView_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_toRightOf="@id/textView_blank3"
            android:paddingTop="8dp"/>

        <!--Spacer 4, Right of Color Icon -->
        <TextView
            android:id="@+id/textView_blank4"
            android:layout_width="30dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"/>

        <!--Color Icon Image -->
        <ImageView
            android:id="@+id/imageView_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:src="@drawable/ic_baseline_circle_test"
            android:layout_toLeftOf="@id/textView_blank4"/>

        <!--Progress/Timer Bar -->
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/timer"
            android:layout_below="@id/textView_timer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"/>
    </RelativeLayout>
    <!--End Relative2-->

</LinearLayout>
<!--End of Main Layout-->





